<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<application>
		<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>
	<navigation-rule>
		<from-view-id>/ViewsJSF/home.xhtml</from-view-id>
		 <navigation-case>
            <from-outcome>votar</from-outcome>
            <to-view-id>/ViewsJSF/votar.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-outcome>agregar</from-outcome>
            <to-view-id>/ViewsJSF/agregar.xhtml</to-view-id>
        </navigation-case>
	    <navigation-case>
			<from-outcome>verVotaciones</from-outcome>
			<to-view-id>/ViewsJSF/verVotaciones.xhtml</to-view-id>
		</navigation-case>
        <navigation-case>
            <from-outcome>preeeliminar</from-outcome>
            <to-view-id>/ViewsJSF/preeliminar.xhtml</to-view-id>
        </navigation-case>
		  <navigation-case>
			<from-outcome>/</from-outcome>
			<to-view-id>/index.html</to-view-id>
		</navigation-case>
			
		<!-- Por defecto -->
        <navigation-case>
            <to-view-id>/ViewsJSF/home.xhtml</to-view-id>
        </navigation-case>
	</navigation-rule>
	
	<navigation-rule>
	  <from-view-id>/ViewsJSF/agregar.xhtml</from-view-id>	
		<navigation-case>
			<from-action>#{agregarViewBean.process}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>home</to-view-id>
		</navigation-case>	
		<!-- Por defecto -->
        <navigation-case>
            <to-view-id>/ViewsJSF/agregar.xhtml</to-view-id>
        </navigation-case>
	</navigation-rule>
	<navigation-rule>
      <from-view-id>/ViewsJSF/verVotaciones.xhtml</from-view-id>  
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/ViewsJSF/home.xhtml</to-view-id>
        </navigation-case>  
        <!-- Por defecto -->
        <navigation-case>
            <to-view-id>/ViewsJSF/verVotaciones.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
      <from-view-id>/ViewsJSF/preeliminar.xhtml</from-view-id>  
        <navigation-case>
            <from-action>#{preeliminarViewBean.process}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>eliminar</to-view-id>
        </navigation-case>  
        <!-- Por defecto -->
        <navigation-case>
            <to-view-id>/ViewsJSF/preeliminar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
      <from-view-id>/ViewsJSF/eliminar.xhtml</from-view-id>  
        <navigation-case>
            <from-action>#{preeliminarViewBean.process}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>home</to-view-id>
        </navigation-case>  
        <!-- Por defecto -->
        <navigation-case>
            <to-view-id>/ViewsJSF/eliminar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
 	<application>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>i18n.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>	

</faces-config>
